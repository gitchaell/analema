{
	"name": "analema-sky-photographer",
	"version": "1.0.0",
	"description": "Automated Sky Photographer system for capturing webcam screenshots in Phoenix, Arizona (Analema Solar y Lunar project)",
	"main": "src/index.ts",
	"scripts": {
		"start": "ts-node src/index.ts",
		"test": "ts-node test/capture-test.ts",
		"test:unit": "glob-cli -c \"node --loader ts-node/esm --test\" \"test/unit/**/*.test.ts\"",
		"test:capture": "ts-node test/capture-test.ts",
		"test:timezone": "ts-node test/timezone-test.ts",
		"build": "tsc",
		"dev": "ts-node-dev src/index.ts",
		"format": "biome format --write .",
		"lint": "biome lint --write .",
		"check": "biome check --write .",
		"generate:calendar": "ts-node scripts/generate-calendar.ts",
		"generate:animation": "ts-node scripts/generate-animation.ts"
	},
	"keywords": [
		"puppeteer",
		"screenshot",
		"webcam",
		"automation",
		"analema"
	],
	"author": "",
	"license": "MIT",
	"dependencies": {
		"puppeteer": "^21.7.0"
	},
	"devDependencies": {
		"@biomejs/biome": "^2.3.11",
		"@types/node": "^20.10.0",
		"glob-cli": "^1.0.0",
		"ts-node": "^10.9.2",
		"typescript": "^5.3.3"
	},
	"engines": {
		"node": ">=20.0.0"
	}
}
